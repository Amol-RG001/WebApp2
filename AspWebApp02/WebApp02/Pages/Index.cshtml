@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
 <p> by - @Model.AuthorName </p>
</div>
<ul>
    @for (int i = 0; i < 5; i++)
    {
        <li>Example #i</li>
    }
</ul>

<ul>
    @for (int i = 0; i < 5; i++)
    {
        <li>Example <b>#@(i + 1)</b></li>
    }
</ul>

<ul>
    @for (int i = 0; i < 5; i++)
    {
        string s = $"Example <b>{i + 1}";             // C#
        <li>@s</li>                                 <!-- html with C# inlined -->
    }
</ul>


<ul>
    @for (int i = 0; i < 5; i++)
    {
        string s = $"Example <b>{i + 1}</b>";
        <li>@Html.Raw(s)</li>                           <!-- HTML Helper to render the HTML content! -->
        <hr />
    }
</ul>